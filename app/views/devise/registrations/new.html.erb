<h2>Sign up</h2>
<div class="row">

		
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => 'well form-horizontal' }) do |f| %>
			  <%= f.error_notification %>

			  <%= f.input :name %>
			  <%= f.input :email %>	
			  <%= f.input :password %>
			  <%= f.input :password_confirmation %>
		

		  <div class="form-actions">
		  	<%= f.submit "Sign up",  class: "btn btn-primary" %>
		  </div>
		<% end %>


</div>

		<%= render "devise/shared/links" %>